# SOFTWARE OR THE USE OR OTHER DEALINGS IN THE SOFTWARE.

set -x

po=$1

if [ ! -e "$1" ]
then
  echo PO-File $1 not found. Usage: $0 ??.po
  exit 1
fi

if [ ! -e ChangeLog ]
then
  echo ChangeLog not found. Please run from po directory.
  exit 1
fi


name=$(perl -n -e 'print $1 if /Last-Translator: (.*)\\n/' "$1")

if [ -z "$name" ]
then
  echo Could not parse out name
  exit 1
fi

set -e

cvs update ChangeLog
( echo "$(date +%Y-%m-%d)  $name"
  echo 
  echo "	* $po: Updated"
  echo
  cat ChangeLog
) > ChangeLogX
mv ChangeLogX ChangeLog

cvs ci -m "$po updated" "$po" ChangeLog

echo Successfully commite new Versions of $po and ChangeLog
